package hr.combis;

import java.util.Locale;

import org.junit.jupiter.api.Test;
import org.junit.runner.RunWith;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.boot.test.context.SpringBootTest;
import org.springframework.test.context.junit4.SpringRunner;

import hr.combis.common.Translator;
import hr.combis.enums.ERROR_CODE;
import hr.combis.model.Person;
import hr.combis.repository.IPersonRepository;
import hr.combis.service.IPersonService;

//@SpringBootTest
@RunWith(SpringRunner.class)
@SpringBootTest(classes = Application.class)
//@Import(TestConfig.class)
class ApplicationTests {
	@Autowired
	IPersonRepository iPersonRepository;
	
	@Autowired
	IPersonService iPersonService;
	
	@Autowired
	Translator messages;
	
	@Test
	public void findPerson() {
		Person person = iPersonRepository.findByFirstNameAndLastNameAndZipCodeAndCityAndPhone(
				"aa", "aa", 10000, "aa", "aa");
		assert(person != null);
	}
	
	@Test
	public void findPersonNoPhone() {
		Person person = iPersonRepository.findByFirstNameAndLastNameAndZipCodeAndCityAndPhone(
				"bb", "bb", 10000, "aa", null);
		assert(person != null);
	}
	
	@Test
	public void loadPersonData() {
//		iPersonService.loadDataFromFile();
		assert(true);
	}
	
	@Test
	public void checkErrorMsgs() {
		Person person = new Person();
		person.setZipCodeString("aaa");
		String mm = messages.getMessage(ERROR_CODE.ERR_WRONG_ZIP_CODE.getErrorCode());
		System.out.println(mm);
		assert(mm != null);
	}
	

}
